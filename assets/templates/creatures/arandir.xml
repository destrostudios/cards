<template>
    <values>
        <damage>1</damage>
    </values>
    <entity>
        <name>Arandir</name>
        <creatureCard/>
        <attack>3</attack>
        <health>3</health>
        <spells>
            <entity>
                <condition>source.isInHand</condition>
                <manaCost>5</manaCost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_board"/>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
            <entity template="./templates/simple_attack"/>
            <entity>
                <description>Deal [damage] damage to target opponent creature.</description>
                <maximumCastsPerTurn>1</maximumCastsPerTurn>
                <targetPrefilter>BOARD</targetPrefilter>
                <condition>source.isOnBoard &amp;&amp; !target.isAlly(source) &amp;&amp; target.isCreatureCard</condition>
                <manaCost>1</manaCost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targetChains>
                                    <entity template="../targets/targets"/>
                                </targetChains>
                                <damage>[damage]</damage>
                            </entity>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
        </spells>
    </entity>
</template>