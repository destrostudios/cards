<template>
    <values>
        <name>Artificial Guardian</name>
        <bonusAttack>1</bonusAttack>
        <bonusHealth>1</bonusHealth>
    </values>
    <entity id="card" template="./templates/vanilla(name=[name],manaCost=2,attack=1,health=0)">
        <description>Your "[name]"s on board have +[bonusAttack]/+[bonusHealth].</description>
        <auras>
            <entity>
                <condition>source.isOnBoard &amp;&amp; target.isAlly(source) &amp;&amp; (target.name == "[name]") &amp;&amp; target.isOnBoard</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusAttack>[bonusAttack]</bonusAttack>
                        <bonusHealth>[bonusHealth]</bonusHealth>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>