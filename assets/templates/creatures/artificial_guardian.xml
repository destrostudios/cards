        <description>Your "[name]"s have +[bonusAttack]/+[bonusHealth].</description>
        <auras>
            <entity>
                <conditions>
                    <entity template="../conditions/source_on_board"/>
                    <entity>
                        <targetChains>
                            <entity template="../targets/targets"/>
                        </targetChains>
                        <ally/>
                        <name>[name]</name>
                        <onBoard/>
                    </entity>
                </conditions>
                <auraBuff>
                    <entity>
                        <bonusAttack>[bonusAttack]</bonusAttack>
                        <bonusHealth>[bonusHealth]</bonusHealth>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>