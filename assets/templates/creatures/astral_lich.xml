<template>
    <values>
        <damage>2</damage>
    </values>
    <entity template="./templates/vanilla(name=Astral Lich,manaCost=4,attack=1,health=6)">
        <description>After this creature is healed, deal [damage] to a random opponent.</description>
        <postHealTriggers>
            <entity>
                <condition>target == source</condition>
                <effects>
                    <entity>
                        <targets>
                            <entity>
                                <targetPrefilter>BOARD</targetPrefilter>
                                <targetAll>!target.isAlly(source)</targetAll>
                                <targetRandom>1</targetRandom>
                            </entity>
                        </targets>
                        <damage>[damage]</damage>
                    </entity>
                </effects>
            </entity>
        </postHealTriggers>
    </entity>
</template>