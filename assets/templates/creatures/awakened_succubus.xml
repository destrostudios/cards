<template>
    <entity id="card">
        <name>Awakened Succubus</name>
        <creatureCard/>
        <attack>6</attack>
        <health>4</health>
        <description>Cast: Discard a random card.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>4</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_board"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>HAND,ALLY</targetPrefilters>
                                        <targetAll/>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <addToGraveyard/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>