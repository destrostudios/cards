<template>
    <values>
        <bonusHealth>1</bonusHealth>
    </values>
    <entity id="card" template="./templates/vanilla(name=Bonespirit Fenrir,manaCost=2,attack=4,health=0)">
        <beast/>
        <description>Has +[bonusHealth] health if you have another creature on board.</description>
        <auras>
            <entity>
                <condition>source.isOnBoard &amp;&amp; (target == source) &amp;&amp; source.exists("CREATURE_ZONE", "target.isAlly(source) &amp;&amp; (target != source)")</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusHealth>[bonusHealth]</bonusHealth>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>