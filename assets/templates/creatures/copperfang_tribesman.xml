<template>
    <values>
        <bonusHealth>2</bonusHealth>
    </values>
    <entity id="card">
        <name>Copperfang Tribesman</name>
        <creatureCard/>
        <attack>3</attack>
        <health>2</health>
        <description>Cast: Your beasts on board gain +[bonusHealth] health.</description>
        <spells>
            <entity>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>3</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>CREATURE_ZONE,ALLY</targetPrefilters>
                                        <targetAll>target.isBeast</targetAll>
                                    </entity>
                                </targets>
                                <addBuff>
                                    <entity>
                                        <source>#card</source>
                                        <bonusHealth>[bonusHealth]</bonusHealth>
                                    </entity>
                                </addBuff>
                            </entity>
                            <entity template="../effects/add_source_to_board"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack"/>
        </spells>
    </entity>
</template>