<template>
    <values>
        <bonusAttack>1</bonusAttack>
        <bonusHealth>1</bonusHealth>
    </values>
    <entity>
        <name>Dragon Rider</name>
        <creatureCard/>
        <attack>3</attack>
        <health>4</health>
        <description>Cast: If you have a Dragon in your hand, gain +[bonusAttack]/+[bonusHealth].</description>
        <spells>
            <entity>
                <condition>source.isInHand</condition>
                <manaCost>4</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_board"/>
                            <entity>
                                <condition>source.exists("HAND", "target.isAlly(source) &amp;&amp; target.isDragon")</condition>
                                <targets>
                                    <entity template="../targets/source"/>
                                </targets>
                                <addBuff>
                                    <entity>
                                        <source>#card</source>
                                        <bonusAttack>[bonusAttack]</bonusAttack>
                                        <bonusHealth>[bonusHealth]</bonusHealth>
                                    </entity>
                                </addBuff>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack"/>
        </spells>
    </entity>
</template>