<template>
    <entity template="./templates/vanilla(name=Dragonmancer,manaCost=3,attack=2,health=3)">
        <description>After an ally Dragon is destroyed, destroy this creature and revive the Dragon.</description>
        <postDestructionTriggers>
            <entity>
                <sourcePrefilter>CREATURE_ZONE</sourcePrefilter>
                <condition>target.isAlly(source) &amp;&amp; target.isDragon</condition>
                <effects>
                    <entity template="../effects/add_source_to_graveyard"/>
                    <entity template="../effects/add_target_to_board"/>
                </effects>
            </entity>
        </postDestructionTriggers>
    </entity>
</template>