<template>
    <entity id="card" template="./templates/vanilla(name=Dragon's Knight,manaCost=2,attack=2,health=2)">
        <description>Your Dragons cost (2) less.</description>
        <auras>
            <entity>
                <sourcePrefilters basic="CREATURE_ZONE"/>
                <condition>target.isDefaultCastFromHandSpell &amp;&amp; target.source.isAlly(source) &amp;&amp; target.source.isDragon &amp;&amp; target.source.isInHand</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusManaCost>-2</bonusManaCost>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>