<template>
    <entity>
        <name>Exiled Druid</name>
        <creatureCard/>
        <attack>5</attack>
        <health>5</health>
        <description>Cast: Revive a random ally Beast.</description>
        <spells>
            <entity>
                <sourcePrefilter>HAND</sourcePrefilter>
                <manaCost>7</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_board"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilter>GRAVEYARD</targetPrefilter>
                                        <targetAll>target.isAlly(source) &amp;&amp; target.isBeast</targetAll>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <addToBoard/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack"/>
        </spells>
    </entity>
</template>