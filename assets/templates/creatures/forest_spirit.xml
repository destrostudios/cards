<template>
    <entity id="card">
        <name>Forest Spirit</name>
        <creatureCard/>
        <attack>4</attack>
        <health>3</health>
        <description>Cast: Tribute a creature to put a random opponent creature on top of its owners library.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters basic="HAND"/>
                <targetPrefilters basic="CREATURE_ZONE" advanced="ALLY"/>
                <manaCost>4</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/destroy_target"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/random_opponent_creature_on_board"/>
                                </targets>
                                <moveToLibrary/>
                            </entity>
                            <entity template="../effects/move_source_to_creature_zone"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>