<template>
    <values>
        <bonusManaCost>1</bonusManaCost>
    </values>
    <entity id="card" template="./templates/vanilla(name=Gideas,manaCost=7,attack=4,health=4)">
        <description>Your opponents creatures cost ([bonusManaCost]) more.</description>
        <auras>
            <entity>
                <sourcePrefilters>CREATURE_ZONE</sourcePrefilters>
                <condition>target.isDefaultCastFromHandSpell &amp;&amp; !target.source.isAlly(source) &amp;&amp; target.source.isCreatureCard &amp;&amp; target.source.isInHand</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusManaCost>[bonusManaCost]</bonusManaCost>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>