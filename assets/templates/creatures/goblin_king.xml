<template>
    <entity id="card">
        <name>Goblin King</name>
        <legendary/>
        <creatureCard/>
        <attack>4</attack>
        <health>5</health>
        <goblin/>
        <description>Cast: Gain +1 attack for each ally Goblin on board.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>5</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../targets/source"/>
                                </targets>
                                <addBuff constant="true">
                                    <entity>
                                        <source>#card</source>
                                        <bonusAttack>source.owner.count(["CREATURE_ZONE","ALLY","GOBLIN"])</bonusAttack>
                                    </entity>
                                </addBuff>
                            </entity>
                            <entity template="../effects/add_source_to_creature_zone"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>