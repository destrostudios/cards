<template>
    <values>
        <timesPerTurn>3</timesPerTurn>
    </values>
    <entity id="card">
        <name>Goblin Recruiter</name>
        <creatureCard/>
        <attack>2</attack>
        <health>2</health>
        <goblin/>
        <spells>
            <entity template="../spells/templates/simple_summon(source=#card,manaCost=2)"/>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
            <entity>
                <source>#card</source>
                <description>Summon a 1/1 Goblin.</description>
                <sourcePrefilters basic="CREATURE_ZONE"/>
                <maximumCastsPerTurn>[timesPerTurn]</maximumCastsPerTurn>
                <manaCost>2</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/spawn_for_owner(template=creatures/goblin)"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>