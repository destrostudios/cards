<template>
    <values>
        <heal>5</heal>
        <damage>5</damage>
    </values>
    <entity id="card">
        <name>High Priestess Llyncis</name>
        <legendary/>
        <creatureCard/>
        <attack>5</attack>
        <health>5</health>
        <description>Cast: Heal [heal] health of target character. Then, if it's undamaged, deal [damage] damage to it.</description>
        <spells>
            <entity>
                <source>#card</source>
                <targetOptional/>
                <sourcePrefilters basic="HAND"/>
                <targetPrefilters basic="BOARD"/>
                <manaCost>7</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/move_source_to_creature_zone"/>
                        </effects>
                    </entity>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../targets/targets"/>
                                </targets>
                                <heal>[heal]</heal>
                            </entity>
                        </effects>
                    </entity>
                    <entity>
                        <targetPrefilters advanced="NOT_DAMAGED"/>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../targets/targets"/>
                                </targets>
                                <damage>[damage]</damage>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>