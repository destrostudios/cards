<template>
    <values>
        <damage>4</damage>
    </values>
    <entity id="card">
        <name>Injured Legend</name>
        <creatureCard/>
        <attack>3</attack>
        <health>6</health>
        <description>Cast: Deal [damage] damage to this creature.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>3</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_board"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/source"/>
                                </targets>
                                <damage>[damage]</damage>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>