<template>
    <values>
        <bonusAttack>1</bonusAttack>
        <bonusHealth>1</bonusHealth>
    </values>
    <entity>
        <name>Inspiring Angel</name>
        <character/>
        <creatureCard/>
        <attack>4</attack>
        <health>4</health>
        <description>Cast: Your creatures on board gain +[bonusAttack]/+[bonusHealth].</description>
        <spells>
            <entity>
                <conditions>
                    <entity template="../conditions/source_in_hand"/>
                </conditions>
                <cost>
                    <entity>
                        <mana>6</mana>
                    </entity>
                </cost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targetChains>
                                    <entity template="../targets/all_ally_creatures_on_board"/>
                                </targetChains>
                                <addBuffs>
                                    <entity>
                                        <bonusAttack>[bonusAttack]</bonusAttack>
                                        <bonusHealth>[bonusHealth]</bonusHealth>
                                    </entity>
                                </addBuffs>
                            </entity>
                            <entity template="../effects/add_source_to_board"/>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
            <entity template="./templates/simple_attack"/>
        </spells>
    </entity>
</template>