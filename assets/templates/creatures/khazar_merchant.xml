<template>
    <values>
        <maximumManaCost>3</maximumManaCost>
    </values>
    <entity id="card">
        <name>Khazar Merchant</name>
        <creatureCard/>
        <attack>2</attack>
        <health>2</health>
        <description>Cast: Draw a spell from your library that costs ([maximumManaCost]) or less.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>3</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/move_source_to_creature_zone"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>LIBRARY,ALLY</targetPrefilters>
                                        <targetAll>target.isSpellCard &amp;&amp; target.manaCost &lt;= [maximumManaCost]</targetAll>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <moveToHand/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>