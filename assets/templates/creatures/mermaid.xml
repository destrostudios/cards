<template>
    <values>
        <name>Mermaid</name>
    </values>
    <entity id="card" template="./templates/vanilla(name=[name],manaCost=2,attack=2,health=2)">
        <description>Your "[name]"s cost (1) less.</description>
        <auras>
            <entity>
                <sourcePrefilters basic="CREATURE_ZONE"/>
                <condition>target.isDefaultCastFromHandSpell &amp;&amp; target.source.isAlly(source) &amp;&amp; (target.source.name == "[name]") &amp;&amp; target.source.isInHand</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusManaCost>-1</bonusManaCost>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>