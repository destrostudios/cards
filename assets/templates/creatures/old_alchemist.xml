<template>
    <values>
        <maximumManaCost>6</maximumManaCost>
    </values>
    <entity>
        <name>Old Alchemist</name>
        <creatureCard/>
        <attack>5</attack>
        <health>5</health>
        <description>Cast: Add a random spell from your graveyard to your hand.</description>
        <spells>
            <entity>
                <condition>source.isInHand</condition>
                <manaCost>6</manaCost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_board"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilter>GRAVEYARD</targetPrefilter>
                                        <targetAll>target.isAlly(source) &amp;&amp; target.isSpellCard</targetAll>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack"/>
        </spells>
    </entity>
</template>