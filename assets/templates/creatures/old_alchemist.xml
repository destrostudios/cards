<template>
    <values>
        <maximumManaCost>6</maximumManaCost>
    </values>
    <entity id="card">
        <name>Old Alchemist</name>
        <creatureCard/>
        <attack>5</attack>
        <health>5</health>
        <description>Cast: Add a random spell from your graveyard to your hand.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>6</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_creature_zone"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>GRAVEYARD,ALLY</targetPrefilters>
                                        <targetAll>target.isSpellCard</targetAll>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>