<template>
    <values>
        <bonusHealth>2</bonusHealth>
    </values>
    <entity id="card" template="./templates/vanilla(name=Ox Warhero,manaCost=2,attack=3,health=1)">
        <legendary/>
        <beast/>
        <description>Has +[bonusHealth] health if you have another Beast on board.</description>
        <auras>
            <entity>
                <sourcePrefilters>SOURCE,CREATURE_ZONE</sourcePrefilters>
                <condition>source.exists(["CREATURE_ZONE","ALLY","NOT_SOURCE"], "target.isBeast")</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusHealth>[bonusHealth]</bonusHealth>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>