<template>
    <values>
        <bonusHealth>1</bonusHealth>
    </values>
    <entity id="card" template="./templates/vanilla(name=Ox Warhero,manaCost=2,attack=3,health=2)">
        <legendary/>
        <beast/>
        <description>Has +[bonusHealth] health if you have another Beast on board.</description>
        <auras>
            <entity>
                <sourcePrefilters basic="CREATURE_ZONE"/>
                <targetPrefilters advanced="SOURCE"/>
                <condition>source.exists(["CREATURE_ZONE","BEAST"], ["NOT_SOURCE","ALLY"])</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusHealth>[bonusHealth]</bonusHealth>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>