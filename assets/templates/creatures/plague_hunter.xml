<template>
    <entity id="card">
        <name>Plague Hunter</name>
        <creatureCard/>
        <attack>2</attack>
        <health>2</health>
        <description>Cast: If your hand is empty, draw a card.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>2</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/move_source_to_creature_zone"/>
                        </effects>
                    </entity>
                    <entity>
                        <condition>!source.owner.exists(["HAND","ALLY"])</condition>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../targets/source_owner"/>
                                </targets>
                                <draw>1</draw>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>