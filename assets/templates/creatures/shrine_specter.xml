<template>
    <values>
        <bonusHealth>1</bonusHealth>
    </values>
    <entity id="card" template="./templates/vanilla(name=Shrine Specter,manaCost=2,attack=2,health=3)">
        <description>After you play a spell, this creature gains +[bonusHealth] health.</description>
        <postCastSpellTriggers>
            <entity>
                <sourcePrefilters basic="CREATURE_ZONE"/>
                <targetPrefilters advanced="DEFAULT_CAST_FROM_HAND_SPELL,SOURCE_SPELL_CARD,SOURCE_ALLY"/>
                <effects>
                    <entity>
                        <targets>
                            <entity template="../targets/source"/>
                        </targets>
                        <addBuff>
                            <entity>
                                <source>#card</source>
                                <bonusHealth>[bonusHealth]</bonusHealth>
                            </entity>
                        </addBuff>
                    </entity>
                </effects>
            </entity>
        </postCastSpellTriggers>
    </entity>
</template>