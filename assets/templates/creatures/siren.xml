<template>
    <entity id="card" template="./templates/vanilla(name=Siren,manaCost=3,attack=2,health=2)">
        <description>Your spells cost (1) less.</description>
        <auras>
            <entity>
                <sourcePrefilters>CREATURE_ZONE</sourcePrefilters>
                <condition>target.isDefaultCastFromHandSpell &amp;&amp; target.source.isAlly(source) &amp;&amp; target.source.isSpellCard &amp;&amp; target.source.isInHand</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusManaCost>-1</bonusManaCost>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>