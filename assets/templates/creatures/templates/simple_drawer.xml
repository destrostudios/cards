<template>
    <entity>
        <name>[name]</name>
        <creatureCard/>
        <attack>[attack]</attack>
        <health>[health]</health>
        <description>Draw [draw] card/s.</description>
        <spells>
            <entity>
                <conditions>
                    <entity template="../../conditions/source_in_hand"/>
                </conditions>
                <manaCost>[manaCost]</manaCost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targetChains>
                                    <entity template="../../targets/source_owner"/>
                                </targetChains>
                                <draw>[draw]</draw>
                            </entity>
                            <entity template="../../effects/add_source_to_board"/>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
            <entity template="./simple_attack"/>
        </spells>
    </entity>
</template>