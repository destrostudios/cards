<template>
    <entity id="card">
        <name>[name]</name>
        <creatureCard/>
        <attack>[attack]</attack>
        <health>[health]</health>
        <description>Cast: Summon a [summonDescription].</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>[manaCost]</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../../effects/add_source_to_creature_zone"/>
                            <entity template="../../effects/spawn_for_owner(template=[summonTemplate])"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>