<template>
    <entity>
        <name>[name]</name>
        <creatureCard/>
        <attack>[attack]</attack>
        <health>[health]</health>
        <spells>
            <entity>
                <targetOptional/>
                <targetPrefilter>BOARD</targetPrefilter>
                <condition>source.isInHand &amp;&amp; ((target == null) || target.isCreatureCard)</condition>
                <manaCost>[manaCost]</manaCost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targetChains>
                                    <entity template="../../targets/targets"/>
                                </targetChains>
                                <addBuff>[buff]</addBuff>
                            </entity>
                            <entity template="../../effects/add_source_to_board"/>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
            <entity template="./simple_attack"/>
        </spells>
    </entity>
</template>