<template>
    <entity id="card">
        <name>[name]</name>
        <creatureCard/>
        <attack>[attack]</attack>
        <health>[health]</health>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <targetOptional/>
                <targetPrefilters>CREATURE_ZONE</targetPrefilters>
                <manaCost>[manaCost]</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../../targets/targets"/>
                                </targets>
                                <addBuff>[buff]</addBuff>
                            </entity>
                            <entity template="../../effects/move_source_to_creature_zone"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>