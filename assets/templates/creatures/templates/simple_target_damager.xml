<template>
    <entity id="card">
        <name>[name]</name>
        <creatureCard/>
        <attack>[attack]</attack>
        <health>[health]</health>
        <description>Cast: Deal [damage] damage to target character.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <targetOptional/>
                <targetPrefilters>BOARD</targetPrefilters>
                <manaCost>[manaCost]</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../../targets/targets"/>
                                </targets>
                                <damage>[damage]</damage>
                            </entity>
                            <entity template="../../effects/add_source_to_board"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>