<template>
    <entity id="card">
        <name>Terror from Above</name>
        <legendary/>
        <creatureCard/>
        <attack>5</attack>
        <health>5</health>
        <dragon/>
        <description>Cast: Destroy all creatures on board and end your turn.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters basic="HAND"/>
                <manaCost>10</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_creatures_on_board"/>
                                </targets>
                                <destroy/>
                            </entity>
                            <entity template="../effects/move_source_to_creature_zone"/>
                            <entity template="../effects/end_turn"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>