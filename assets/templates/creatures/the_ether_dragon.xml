<template>
    <entity>
        <name>The Ether Dragon</name>
        <legendary/>
        <creatureCard/>
        <attack>10</attack>
        <health>10</health>
        <dragon/>
        <description>Cast: Summon all Dragons from your hand and end your turn.</description>
        <spells>
            <entity>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>10</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_board"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>HAND,ALLY</targetPrefilters>
                                        <targetAll>target.isDragon</targetAll>
                                    </entity>
                                </targets>
                                <addToBoard/>
                            </entity>
                            <entity template="../effects/end_turn"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack"/>
        </spells>
    </entity>
</template>