<template>
    <entity id="card">
        <name>Thunder Spirit</name>
        <creatureCard/>
        <attack>4</attack>
        <health>3</health>
        <description>Cast: Tribute a creature to destroy a random opponent creature.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters basic="HAND"/>
                <targetPrefilters basic="CREATURE_ZONE" advanced="ALLY"/>
                <manaCost>4</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity template="../targets/targets"/>
                                </targets>
                                <destroy/>
                            </entity>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters basic="CREATURE_ZONE" advanced="NOT_ALLY"/>
                                        <targetAll/>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <destroy/>
                            </entity>
                            <entity template="../effects/move_source_to_creature_zone"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>