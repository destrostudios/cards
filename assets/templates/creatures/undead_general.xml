<template>
    <values>
        <bonusManaCost>3</bonusManaCost>
    </values>
    <entity id="card" template="./templates/vanilla(name=Undead General,manaCost=3,attack=2,health=8)">
        <description>Your creatures cost ([bonusManaCost]) more.</description>
        <auras>
            <entity>
                <sourcePrefilters>CREATURE_ZONE</sourcePrefilters>
                <condition>target.isDefaultCastFromHandSpell &amp;&amp; target.caster.isAlly(source) &amp;&amp; target.caster.isCreatureCard &amp;&amp; target.caster.isInHand</condition>
                <auraBuff>
                    <entity>
                        <source>#card</source>
                        <bonusManaCost>[bonusManaCost]</bonusManaCost>
                    </entity>
                </auraBuff>
            </entity>
        </auras>
    </entity>
</template>