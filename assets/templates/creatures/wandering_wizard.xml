<template>
    <entity id="card">
        <name>Wandering Wizard</name>
        <creatureCard/>
        <attack>4</attack>
        <health>4</health>
        <description>Cast: Draw a random spell from your library.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>5</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_creature_zone"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>LIBRARY,ALLY</targetPrefilters>
                                        <targetAll>target.isSpellCard</targetAll>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>