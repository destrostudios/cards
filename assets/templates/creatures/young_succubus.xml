<template>
    <values>
        <damage>5</damage>
    </values>
    <entity id="card">
        <name>Young Succubus</name>
        <creatureCard/>
        <attack>2</attack>
        <health>2</health>
        <description>Cast: Deal [damage] damage to yourself.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters basic="HAND"/>
                <manaCost>1</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/move_source_to_creature_zone"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/source_owner"/>
                                </targets>
                                <damage>[damage]</damage>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
            <entity template="../spells/templates/simple_attack(source=#card)"/>
        </spells>
    </entity>
</template>