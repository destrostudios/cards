<template>
    <values>
        <draw>3</draw>
        <maximumManaCost>2</maximumManaCost>
    </values>
    <entity id="card">
        <name>A Long Trip</name>
        <spellCard/>
        <description>Draw [draw] random goblins from your library that cost ([maximumManaCost]) or less.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>3</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>LIBRARY,ALLY,GOBLIN</targetPrefilters>
                                        <targetAll>target.manaCost &lt;= [maximumManaCost]</targetAll>
                                        <targetRandom>[draw]</targetRandom>
                                    </entity>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>