<template>
    <values>
        <minimumManaCost>5</minimumManaCost>
    </values>
    <entity>
        <name>Adventure</name>
        <spellCard/>
        <description>Draw a random creature from your library that costs ([minimumManaCost]) or more.</description>
        <spells>
            <entity>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>2</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>LIBRARY</targetPrefilters>
                                        <targetAll>target.isAlly(source) &amp;&amp; target.isCreatureCard &amp;&amp; target.manaCost &gt;= [minimumManaCost]</targetAll>
                                        <targetRandom>1</targetRandom>
                                    </entity>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>