<template>
    <values>
        <amount>2</amount>
    </values>
    <entity id="card">
        <name>Arcane Graveyard</name>
        <spellCard/>
        <description>Put [amount] random spells from your graveyard to your hand.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <condition>source.count(["GRAVEYARD","ALLY","SPELL_CARD"]) >= [amount]</condition>
                <manaCost>2</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>GRAVEYARD,ALLY</targetPrefilters>
                                        <targetAll>target.isSpellCard</targetAll>
                                        <targetRandom>[amount]</targetRandom>
                                    </entity>
                                </targets>
                                <moveToHand/>
                            </entity>
                            <entity template="../effects/move_source_to_graveyard"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>