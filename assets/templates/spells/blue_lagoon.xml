<template>
    <values>
        <draw>3</draw>
    </values>
    <entity id="card">
        <name>Blue Lagoon</name>
        <spellCard/>
        <description>Draw [draw] random beasts from your library.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>5</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>LIBRARY,ALLY,BEAST</targetPrefilters>
                                        <targetAll/>
                                        <targetRandom>[draw]</targetRandom>
                                    </entity>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>