<template>
    <values>
        <draw>3</draw>
    </values>
    <entity>
        <name>Blue Lagoon</name>
        <spellCard/>
        <description>Draw [draw] random beasts from your deck.</description>
        <spells>
            <entity>
                <condition>source.isInHand</condition>
                <manaCost>5</manaCost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilter>LIBRARY</targetPrefilter>
                                        <targetAll>target.isAlly(source) &amp;&amp; target.isBeast</targetAll>
                                        <targetRandom>[draw]</targetRandom>
                                    </entity>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
        </spells>
    </entity>
</template>