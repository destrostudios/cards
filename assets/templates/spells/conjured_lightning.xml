<template>
    <values>
        <allyDamage>1</allyDamage>
        <opponentDamage>2</opponentDamage>
    </values>
    <entity>
        <name>Conjured Lightning</name>
        <spellCard/>
        <description>Deal [opponentDamage] damage to all opponent creatures and [allyDamage] damage to all ally creatures.</description>
        <spells>
            <entity>
                <condition>source.isInHand</condition>
                <manaCost>5</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_opponent_creatures_on_board"/>
                                </targets>
                                <damage>[opponentDamage]</damage>
                            </entity>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_ally_creatures_on_board"/>
                                </targets>
                                <damage>[allyDamage]</damage>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>