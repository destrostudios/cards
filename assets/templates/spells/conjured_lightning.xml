<template>
    <values>
        <damage>2</damage>
        <heal>2</heal>
    </values>
    <entity>
        <name>Conjured Lightning</name>
        <spellCard/>
        <description>Deal [damage] damage to all opponent creatures and heal [heal] health of all ally creatures.</description>
        <spells>
            <entity>
                <condition>source.isInHand</condition>
                <manaCost>5</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_opponent_creatures_on_board"/>
                                </targets>
                                <damage>[damage]</damage>
                            </entity>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_ally_creatures_on_board"/>
                                </targets>
                                <heal>[heal]</heal>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>