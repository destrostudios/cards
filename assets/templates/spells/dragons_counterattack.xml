<template>
    <values>
        <damage>6</damage>
    </values>
    <entity>
        <name>Dragon's Counterattack</name>
        <spellCard/>
        <description>Discard target Dragon and deal [damage] damage to all opponent creatures.</description>
        <spells>
            <entity>
                <targetPrefilter>HAND</targetPrefilter>
                <condition>source.isInHand &amp;&amp; target.isDragon</condition>
                <manaCost>5</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity template="../effects/add_target_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_opponent_creatures_on_board"/>
                                </targets>
                                <damage>[damage]</damage>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>