<template>
    <values>
        <damage>4</damage>
    </values>
    <entity id="card">
        <name>Elemental Orb</name>
        <spellCard/>
        <description>Deal [damage] damage to target creature and summon a 4/4 Landed Elemental Orb.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters basic="HAND"/>
                <targetPrefilters basic="CREATURE_ZONE"/>
                <manaCost>6</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/move_source_to_graveyard"/>
                            <entity template="../effects/damage_target(damage=[damage])"/>
                            <entity template="../effects/spawn_for_owner(template=creatures/landed_elemental_orb)"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>