<template>
    <values>
        <sacrifices>2</sacrifices>
    </values>
    <entity id="card">
        <name>Fire Altar</name>
        <spellCard/>
        <description>Destroy [sacrifices] random ally creatures to summon target Dragon from your hand.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <targetPrefilters>HAND,ALLY,DRAGON</targetPrefilters>
                <condition>source.count(["CREATURE_ZONE","ALLY"]) >= [sacrifices]</condition>
                <manaCost>1</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/move_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>CREATURE_ZONE,ALLY</targetPrefilters>
                                        <targetAll/>
                                        <targetRandom>[sacrifices]</targetRandom>
                                    </entity>
                                </targets>
                                <destroy/>
                            </entity>
                            <entity template="../effects/move_target_to_creature_zone"/>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>