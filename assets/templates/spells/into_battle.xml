<template>
    <values>
        <bonusAttack>2</bonusAttack>
        <bonusHealth>2</bonusHealth>
    </values>
    <entity id="card">
        <name>Into Battle</name>
        <spellCard/>
        <description>Your creatures in hand gain +[bonusAttack]/+[bonusHealth].</description>
        <spells>
            <entity>
                <sourcePrefilter>HAND</sourcePrefilter>
                <manaCost>6</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_ally_creatures_in_hand"/>
                                </targets>
                                <addBuff>
                                    <entity>
                                        <source>#card</source>
                                        <bonusAttack>[bonusAttack]</bonusAttack>
                                        <bonusHealth>[bonusHealth]</bonusHealth>
                                    </entity>
                                </addBuff>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>