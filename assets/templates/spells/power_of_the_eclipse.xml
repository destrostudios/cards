                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targetChains>
                                    <entity template="../targets/targets"/>
                                </targetChains>
                                <addBuffs>
                                    <entity>
                                        <bonusAttack>[bonusAttack]</bonusAttack>
                                        <bonusHealth>[bonusHealth]</bonusHealth>
