<template>
    <entity id="card">
        <name>Sandstorm</name>
        <spellCard/>
        <description>Return all creatures on the board to their owner's hand.</description>
        <flavourText>"Doo doo doo doo doo."</flavourText>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>7</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/all_creatures_on_board"/>
                                </targets>
                                <addToHand/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>