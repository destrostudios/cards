<template>
    <entity id="card">
        <name>Stampede</name>
        <spellCard/>
        <description>Destroy all ally Beasts and as many random opponent creatures.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <condition>source.count(["CREATURE_ZONE","ALLY","BEAST"]) > 0</condition>
                <manaCost>2</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>CREATURE_ZONE,NOT_ALLY</targetPrefilters>
                                        <targetAll/>
                                        <targetRandom>source.count(["CREATURE_ZONE","ALLY","BEAST"])</targetRandom>
                                    </entity>
                                </targets>
                                <destroy/>
                            </entity>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>CREATURE_ZONE,ALLY,BEAST</targetPrefilters>
                                        <targetAll/>
                                    </entity>
                                </targets>
                                <destroy/>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>