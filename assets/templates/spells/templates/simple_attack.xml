<template>
    <values>
        <timesPerTurn>1</timesPerTurn>
    </values>
    <entity>
        <source>[source]</source>
        <sourcePrefilters basic="CREATURE_ZONE"/>
        <targetPrefilters basic="BOARD" advanced="NOT_ALLY"/>
        <condition>target.isCreatureCard || !target.exists(["CREATURE_ZONE"], ["ALLY"])</condition>
        <maximumCastsPerTurn>[timesPerTurn]</maximumCastsPerTurn>
        <tauntable/>
        <castTriggers>
            <entity>
                <effects>
                    <entity template="../../effects/battle_target"/>
                </effects>
            </entity>
        </castTriggers>
    </entity>
</template>