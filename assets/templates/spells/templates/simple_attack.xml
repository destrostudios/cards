<template>
    <values>
        <timesPerTurn>1</timesPerTurn>
    </values>
    <entity>
        <maximumCastsPerTurn>[timesPerTurn]</maximumCastsPerTurn>
        <tauntable/>
        <sourcePrefilters>CREATURE_ZONE</sourcePrefilters>
        <targetPrefilters>BOARD,NOT_ALLY</targetPrefilters>
        <condition>target.isCreatureCard || !target.exists(["CREATURE_ZONE","ALLY"])</condition>
        <castTriggers>
            <entity>
                <effects>
                    <entity template="../../effects/battle_target"/>
                </effects>
            </entity>
        </castTriggers>
    </entity>
</template>