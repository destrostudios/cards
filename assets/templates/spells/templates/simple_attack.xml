<template>
    <values>
        <timesPerTurn>1</timesPerTurn>
    </values>
    <entity>
        <maximumCastsPerTurn>[timesPerTurn]</maximumCastsPerTurn>
        <tauntable/>
        <sourcePrefilter>CREATURE_ZONE</sourcePrefilter>
        <targetPrefilter>BOARD</targetPrefilter>
        <condition>!target.isAlly(source) &amp;&amp; (target.isCreatureCard || !target.exists(["CREATURE_ZONE"], "target.owner == source"))</condition>
        <castTriggers>
            <entity>
                <effects>
                    <entity template="../../effects/battle_target"/>
                </effects>
            </entity>
        </castTriggers>
    </entity>
</template>