<template>
    <values>
        <timesPerTurn>1</timesPerTurn>
    </values>
    <entity>
        <maximumCastsPerTurn>[timesPerTurn]</maximumCastsPerTurn>
        <tauntable/>
        <targetPrefilter>BOARD</targetPrefilter>
        <condition>source.isOnBoard &amp;&amp; !target.isAlly(source) &amp;&amp; (target.isCreatureCard || (target.isPlayer &amp;&amp; !target.exists("CREATURE_ZONE", "target.owner == source")))</condition>
        <castTriggers>
            <entity>
                <effects>
                    <entity template="../../effects/battle_target"/>
                </effects>
            </entity>
        </castTriggers>
    </entity>
</template>