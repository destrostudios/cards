<template>
    <entity>
        <name>[name]</name>
        <spellCard/>
        <description>[description]</description>
        <spells>
            <entity>
                <targetPrefilter>BOARD</targetPrefilter>
                <condition>source.isInHand &amp;&amp; target.isCreatureCard</condition>
                <manaCost>[manaCost]</manaCost>
                <instantEffectTriggers>
                    <entity>
                        <effects>
                            <entity template="../../effects/add_source_to_graveyard"/>
                            <entity>
                                <targetChains>
                                    <entity template="../../targets/targets"/>
                                </targetChains>
                                <addBuff>[buff]</addBuff>
                            </entity>
                        </effects>
                    </entity>
                </instantEffectTriggers>
            </entity>
        </spells>
    </entity>
</template>