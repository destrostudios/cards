<template>
    <entity id="card">
        <name>[name]</name>
        <spellCard/>
        <description>[description]</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <targetPrefilters>CREATURE_ZONE</targetPrefilters>
                <manaCost>[manaCost]</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../../targets/targets"/>
                                </targets>
                                <addBuff>[buff]</addBuff>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>