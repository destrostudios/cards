<template>
    <entity id="card">
        <name>[name]</name>
        <spellCard/>
        <description>Deal [damage] damage to target character.</description>
        <spells>
            <entity>
                <source>#card</source>
                <sourcePrefilters>HAND</sourcePrefilters>
                <targetPrefilters>BOARD</targetPrefilters>
                <manaCost>[manaCost]</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../../effects/move_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../../targets/targets"/>
                                </targets>
                                <damage>[damage]</damage>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>