<template>
    <entity>
        <name>Unprocessed Mana Crystal</name>
        <spellCard/>
        <description>Reduce cost of target card in your hand by (1).</description>
        <spells>
            <entity>
                <targetPrefilter>HAND</targetPrefilter>
                <condition>source.isInHand &amp;&amp; target.isAlly(source)</condition>
                <manaCost>1</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity template="../targets/targets_default_cast_from_hand_spell"/>
                                </targets>
                                <addBuff>
                                    <entity>
                                        <source>#card</source>
                                        <bonusManaCost>-1</bonusManaCost>
                                    </entity>
                                </addBuff>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>