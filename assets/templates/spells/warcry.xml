<template>
    <values>
        <bonusAttack>1</bonusAttack>
    </values>
    <entity id="card">
        <name>Warcry</name>
        <spellCard/>
        <description>Your Goblins gain +[bonusAttack] attack until end of turn.</description>
        <spells>
            <entity>
                <sourcePrefilters>HAND</sourcePrefilters>
                <manaCost>2</manaCost>
                <castTriggers>
                    <entity>
                        <effects>
                            <entity template="../effects/add_source_to_graveyard"/>
                            <entity>
                                <targets>
                                    <entity>
                                        <targetPrefilters>CREATURE_ZONE</targetPrefilters>
                                        <targetAll>target.isAlly(source) &amp;&amp; target.isGoblin</targetAll>
                                    </entity>
                                </targets>
                                <addBuff>
                                    <entity>
                                        <source>#card</source>
                                        <bonusAttack>[bonusAttack]</bonusAttack>
                                        <untilEndOfTurn/>
                                    </entity>
                                </addBuff>
                            </entity>
                        </effects>
                    </entity>
                </castTriggers>
            </entity>
        </spells>
    </entity>
</template>